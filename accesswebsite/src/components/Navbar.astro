/* JS for hamburger toggle */
let menuOpen = false;

function toggleMenu() {
  const nav = document.querySelector(".nav-links");
  const burger = document.querySelector(".hamburger");

  menuOpen = !menuOpen;

  if (menuOpen) {
    nav?.classList.add("show");
    burger?.classList.add("open");
  } else {
    nav?.classList.remove("show");
    burger?.classList.remove("open");
  }
}
---
<header class="navbar">
  <div class="logo">
    <img src="/images/homePages/accesslogo.png" alt="logo" />
  </div>

  <!-- Hamburger Icon -->
  <div class="hamburger" onclick="toggleMenu()">
    <span></span>
    <span></span>
    <span></span>
  </div>

  <nav>
    <ul class="nav-links">
      <li><a href="/" class="active">Home</a></li>
      <li><a href="/faculty">Faculty</a></li>
      <li><a href="/committee">Committee Members</a></li>
      <li><a href="/placements">Placements</a></li>
      <li><a href="/notes">Notes & Resources</a></li>
      <li><a href="/events">Events</a></li>
      <li><a href="/about">About Us</a></li>
    </ul>
  </nav>
</header>

<style>
  .navbar {
    width: 90%;
    display: flex;
    justify-content: space-between; /* FIXED */
    align-items: center;
    padding: 20px 10px;
    font-size: 1.2rem;
    background: linear-gradient(to bottom, #020203a6 90%, transparent);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
  }

  .logo img {
    height: 60px;
  }

  /* Desktop Nav */
  .nav-links {
    display: flex;
    gap: 50px;
    list-style: none;
    align-items: center;
  }

  .nav-links a {
    font-family: 'Poppins', sans-serif;
    font-weight: 700;
    color: #e6e6e6;
    text-decoration: none;
    position: relative;
  }

  .nav-links a.active::after,
  .nav-links a:hover::after {
    content: "";
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 100%;
    height: 3px;
    background: #441069;
    border-radius: 4px;
  }

  .nav-links a::after {
    content: "";
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 0%;
    height: 3px;
    background: #441069;
    transition: 0.3s;
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  /* HAMBURGER MENU */
  .hamburger {
    display: none;
    flex-direction: column;
    gap: 6px;
    cursor: pointer;
    position: absolute;
    justify-content: : space-between;
    right: 25px;
    top: 30px; /* aligned better */
    z-index: 2000;
  }

  .hamburger span {
    width: 30px;
    height: 4px;
    justify-content: right;
    background: #fff;
    transition: 0.3s ease;
  }

  /* Animation when open */
  .hamburger.open span:nth-child(1) {
    transform: translateY(9px) rotate(45deg);
  }
  .hamburger.open span:nth-child(2) {
    opacity: 0;
  }
  .hamburger.open span:nth-child(3) {
    transform: translateY(-9px) rotate(-45deg);
  }

  /* MOBILE MENU */
  @media (max-width: 768px) {
    .hamburger {
      display: flex !important;
    }

    .logo img {
      height: 45px !important;
    }

    .nav-links {
      position: absolute;
      top: 100px;
      right: 0;
      width: 100%;
      background: #0f0f13;
      flex-direction: column;
      text-align: center;
      padding: 20px 0;
      gap: 25px;
      display: none;
      border-bottom: 1px solid #222;
    }

    .nav-links.show {
      display: flex;
    }

    .nav-links a {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 480px) {
    .logo img {
      height: 38px !important;
    }
  }
</style>
