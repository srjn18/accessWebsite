---
const { name, role, semester, image } = Astro.props;
---

<div class="member-card">
  <img src={image} alt={name} />
  <h3>{name}</h3>
  <p class="role">{role}</p>
  {semester && <p class="semester">Semester: {semester}</p>}
</div>

<style>
.member-card {
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(10px);
  border-radius: 18px;
  padding: 20px;
  text-align: center;
  transition: all 0.4s ease;
  box-shadow: 0 0 25px rgba(138, 43, 226, 0.3);
}

.member-card:hover {
  transform: translateY(-10px) scale(0.9);
  box-shadow: 0 0 40px rgba(255, 94, 0, 0.8);
}

.member-card img {
  width: 100%;
  border-radius: 14px;
  margin-bottom: 12px;
}

.role {
  color: #ff9f43;
  font-weight: 600;
  font-size: 1.5rem;
}

.semester {
  color: #cfcfcf;
  font-size: 1.3rem;
}
</style>
