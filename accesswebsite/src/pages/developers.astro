/* Social icons */
/* Update the social-links class to ensure proper centering */
.social-links {
    margin-bottom: 15px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    gap: 20px; /* Creates consistent spacing between the icons */
}

.social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    transition: all 0.3s ease;
    font-size: 18px;
    color: #fff;
    margin: 0;
}

.social-links a:hover {
    background: #f0ecf3;
    transform: translateY(-3px);
}

/* Responsive design */
@media (max-width: 1024px) {
    .team-row {
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        max-width: 600px;
    }
}

@media (max-width: 768px) {
    .team-row {
        grid-template-columns: 1fr;
        gap: 15px;
        max-width: 320px;
    }
    
    .team-member {
        height: 300px;
        margin-bottom: 10px;
    }
    
    .page-title {
        font-size: 36px;
    }
    
    .team-container {
        padding: 10px 15px 30px 15px;
    }
}

@media (max-width: 480px) {
    .team-container {
        padding: 5px 15px 40px 15px;
    }
    
    .team-member {
        height: 280px;
    }
    
    .page-title {
        font-size: 28px;
    }
    
    .overlay h3 {
        font-size: 18px;
    }
}

/* Animation for the cards */
@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

.team-member {
    animation: fadeIn 0.5s ease-out forwards;
    opacity: 0;
}

.team-member:nth-child(1) { animation-delay: 0.1s; }
.team-member:nth-child(2) { animation-delay: 0.3s; }
.team-member:nth-child(3) { animation-delay: 0.5s; }
.team-member:nth-child(4) { animation-delay: 0.7s; }
.team-member:nth-child(5) { animation-delay: 0.9s; }

