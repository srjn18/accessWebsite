    <!-- Navigation & Animation Scripts -->
    <script>
        const astro = document.querySelector(".astro") as HTMLElement;

        function moveAstronaut() {
            //if (!astro) return;
            
            const maxX = window.innerWidth - 170;  // image width buffer
            const maxY = window.innerHeight - 170; // image height buffer

            // generate random position
            const randomX = Math.random() * maxX;
            const randomY = Math.random() * maxY;

            // random speed (5â€“10 seconds)
            const duration = (Math.random() * 5 + 5) + "s";

            astro.style.transition = `transform ${duration} ease-in-out`;
            astro.style.transform = `translate(${randomX}px, ${randomY}px)`;
        }

        // Move to a new random location every few seconds
        setInterval(moveAstronaut, 6000);

        // Start movement immediately
        moveAstronaut();


        document.addEventListener('DOMContentLoaded', function() {
            // Animation for developer cards
            function animateCards() {
                const cards = document.querySelectorAll('.team-member') as NodeListOf<HTMLElement>;
                cards.forEach((card, index) => {
                    setTimeout(() => {
                        card.style.opacity = '1';
                    }, index * 200);
                });
            }
            
            // Run animations
            animateCards();
            
            // Set active navigation item
            const devNav = document.getElementById('developers-nav');
            if (devNav) {
                (devNav as HTMLElement).style.color = '#ff6200';
            }
        });
    </script>
    

