<style>
    /* Header styles */
header {
    padding: 15px 20px;
    margin-bottom: 10px;
    text-align: center;
}

header h3 {
    margin: 0;
    font-weight: 700;
    text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
}

.page-title {
    font-size: 42px;
    font-weight: bold;
    color: whitesmoke;
    position: relative;
    display: inline-block;
    margin-bottom: 5px;
    margin-top: 110px;
}

.page-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 3px;
    background: linear-gradient(90deg, #441069, #00c8ff99);
    border-radius: 2px;
    margin-top: 25px;
}

/* Team container */
.team-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 10px 20px;
    max-width: 1200px;
    margin: 0 auto;
}

.team-row {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    width: 100%;
    max-width: 1200px;
}

/* Team member cards */
.team-member {
    position: relative;
    width: 100%;
    max-width: 280px;
    height: 450px;
    perspective: 1500px;
    margin: 0 auto;
}

/* Card container */
.card {
    width: 100%;
    height: 100%;
    position: relative;
    transform-style: preserve-3d;
    transition: transform 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
}

.team-member:hover .card {
    transform: rotateY(180deg);
}

/* Card faces */
.front, .back {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 15px;
    backface-visibility: hidden;
    overflow: hidden;
}

.front::before, .back::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, transparent 70%, rgba(0, 0, 0, 0.8));
    z-index: 1;
}

.front img, .back img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.team-member:hover .front img, 
.team-member:hover .back img {
    transform: scale(1.05);
}

.back {
    transform: rotateY(180deg);
}

/* Info overlay */
.overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(5px);
    width: 100%;
    padding: 15px 12px;
    border-radius: 0 0 15px 15px;
    z-index: 2;
    transition: all 0.4s ease;
    box-sizing: border-box;
    min-height: 120px;
}

.team-member:hover .overlay {
    background: rgba(0, 0, 0, 0.85);
}

.overlay h3 {
    font-size: 20px;
    margin: 0 0 8px;
    color: #fff;
    font-weight: 600;
}

.overlay p {
    font-size: 15px;
    margin: 0 0 12px;
    opacity: 0.9;
    color: #e0e0e0;
    font-style: italic;
    line-height: 1.3;
    max-height: 60px;
    overflow: visible;
    white-space: normal;
}

/* Astronaut animation */
.astro {
  position: absolute;
  top: 200px;     /* adjust as needed */
  left: 50px;   /* start off-screen */
  width: 180px;
  overflow: hidden;
  pointer-events: none;
  z-index: 1;

