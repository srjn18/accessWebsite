---
import Layout from "../layouts/Layout.astro";
import adminBg from '@assets/homePages/adminBg.png'

// Note: In a real application, you would add authentication checks here.
---

<section
  class="bg-img"
  style={`background-image: url(${adminBg.src});`}
>
  <!-- Background Overlay -->
  <div class="admin-bg-overlay">
    <div class="grid-pattern"></div>
  </div>

  <div class="dashboard-container">
    
    <!-- Sidebar Navigation -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <div class="admin-badge">ADMIN</div>
        <h3>Dashboard</h3>
      </div>
      
      <nav class="nav-menu">
        <button class="nav-btn active" data-target="events">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
          Manage Events
        </button>
        <button class="nav-btn" data-target="placements">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="8.5" cy="7" r="4"></circle><line x1="20" y1="8" x2="20" y2="14"></line><line x1="23" y1="11" x2="17" y2="11"></line></svg>
          Add Placement
        </button>
        <button class="nav-btn" data-target="committee">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
          Update Committee
        </button>
      </nav>

      <div class="sidebar-footer">
        <a href="/" class="back-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="1.1em" height="1.1em" viewBox="0 0 256 256"><path fill="#fff" d="M230 128a6 6 0 0 1-6 6H86.49l61.75 61.76a6 6 0 1 1-8.48 8.48l-72-72a6 6 0 0 1 0-8.48l72-72a6 6 0 0 1 8.48 8.48L86.49 122H224a6 6 0 0 1 6 6M40 34a6 6 0 0 0-6 6v176a6 6 0 0 0 12 0V40a6 6 0 0 0-6-6" /></svg>
          Back to Website
        </a>
      </div>
    </aside>

    <!-- Main Content Area -->
    <main class="content-area">
      
      <!-- 1. EVENTS FORM -->
      <section id="events" class="panel active">
        <div class="panel-header">
          <h2>Post New Event</h2>
          <p>Add upcoming seminars, workshops, or college fests.</p>
        </div>
        
        <div class="box">
          <form id="admin-form-events">
            <div class="form-group">
              <h4>Event Title</h4>
              <input type="text" placeholder="e.g. AI Workshop 2024" />
            </div>

            <div class="form-group">
              <h4>Form</h4>
              <input type="text" placeholder="e.g. Technical, Cultural, Workshop, Sports, Fun, Departmental activity...." />
            </div>
            
            <div class="form-row">
              <div class="form-group">
                <h4>Date</h4>
                <input type="date" />
              </div>
              <div class="form-group">
                <h4>Time</h4>
                <input type="time" />
              </div>
            </div>

            <div class="form-group">
              <h4>Description</h4>
              <textarea rows="4" placeholder="Event details..."></textarea>
            </div>

            <div class="form-group">
              <h4>Location</h4>
              <input type="text" placeholder="CCl..." />
            </div>

            <div class="form-group">
              <h4>Image URL</h4>
              <input type="url" placeholder="https://..." />
            </div>

            <button type="submit" class="save-btn">Publish Event</button>
          </form>
        </div>
      </section>

      <!-- 2. PLACEMENTS FORM -->
      <section id="placements" class="panel">
        <div class="panel-header">
          <h2>Add Placement Record</h2>
          <p>Update the achievers wall with new offers.</p>
        </div>

        <div class="box">
          <form id="admin-form-placements">
            <div class="form-group">
              <h4>Year of Placement</h4>
              <select id="otpions">
                <option>2025-26</option>
                <option>2024-25</option>
                <option>2023-24</option>
                <option>2022-23</option>
              </select>
            </div>
            <div class="form-group">
              <h4>Student Name</h4>
              <input type="text" placeholder="e.g. Aditi Rao" />
            </div>

            <div class="form-group">
              <h4>Company</h4>
              <input type="text" placeholder="e.g. Google" />
            </div>

            <div class="form-row">
              <div class="form-group">
                <h4>LinkedIn URL</h4>
                <input type="url" placeholder="https://linkedin.com/in/..." />
              </div>
              <div class="form-group">
                <h4>Email Address</h4>
                <input type="email" placeholder="student@example.com" />
              </div>
            </div>
            
            <div class="form-group">
              <h4>Photo URL</h4>
              <input type="text" placeholder="/images/students/..." />
            </div>

            <button type="submit" class="save-btn">Save Record</button>
          </form>
        </div>
      </section>

      <!-- 3. COMMITTEE FORM -->
      <section id="committee" class="panel">
        <div class="panel-header">
          <h2>Update Committee Member</h2>
          <p>Add or edit core team details.</p>
        </div>

        <div class="box">
          <form id="admin-form-committee">
            <div class="form-group">
              <h4>Full Name</h4>
              <input type="text" placeholder="e.g. Rahul Verma" />
            </div>

            <div class="form-group">
              <h4>Position / Role</h4>
              <select id="options">
                <option>President</option>
                <option>Vice President</option>
                <option>Branch Captain</option>
                <option>Vice Branch Captain</option>
                <option>Secretary</option>
                <option>Joint-Secretary</option>
                <option>Treasurer</option>
                <option>Co-Treasurer</option>
                <option>Technical Lead</option>
                <option>Co-Technical 1</option>
                <option>Co-Technical 2</option>
                <option>Cultural Coordinator</option>
                <option>Co-cultural 1</option>
                <option>Co-cultural 2</option>
                <option>Sports</option>
                <option>Co-sports</option>
                <option>Graphics</option>
                <option>Co-graphics</option>
                <option>Magazine</option>
                <option>Co-magzine</option>
                <option>Media Head</option>
                <option>Co-media 1</option>
                <option>Co-media 2</option>
                <option>Publicity</option>
              </select>
            </div>

            <div class="form-group">
              <h4>LinkedIn URL</h4>
              <input type="url" placeholder="https://linkedin.com/in/..." />
            </div>

            <div class="form-group">
              <h4>Profile Image URL</h4>
              <input type="text" placeholder="/images/committee/..." />
            </div>

            <button type="submit" class="save-btn">Add Member</button>
          </form>
        </div>
      </section>

    </main>
  </div>
</section>

<script>
  // Simple Tab Switching Logic
  const navBtns = document.querySelectorAll('.nav-btn');
  const panels = document.querySelectorAll('.panel');

  navBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      // Remove active class from all
      navBtns.forEach(b => b.classList.remove('active'));
      panels.forEach(p => p.classList.remove('active'));

      // Add active to clicked
      btn.classList.add('active');
      const targetId = btn.getAttribute('data-target');
      if (targetId) {
        document.getElementById(targetId)?.classList.add('active');
      }
    });
  });

  // Mock Form Submission
  const forms = document.querySelectorAll('form');
  forms.forEach(form => {
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      alert("Details saved successfully! (Backend integration required to persist data)");
      form.reset();
    });
  });
</script>

<style>
  /* --- GLOBAL ADMIN STYLES --- */
  /*.bg-img {
    background-size: cover;
    background-position: center;
    margin: 0;
    padding: 0;
    position: relative;
    border: none;
  }*/

  .admin-bg-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background: #0f172a;
  }

  .grid-pattern {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 30px 30px;
    opacity: 0.4;
  }

  .dashboard-container {
    display: flex;
    min-height: 100vh;
    font-family: 'Inter', sans-serif;
    position: relative;
    z-index: 1;
    margin: 0;
    padding: 0;
  }

  /* --- SIDEBAR --- */
  .sidebar {
    width: 280px;
    background: rgba(15, 23, 42, 0.6);
    border-right: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    flex-direction: column;
    padding: 2rem;
    backdrop-filter: blur(20px);
    position: sticky;
    top: 0;
    height: 100vh;
  }

  .sidebar-header {
    margin-bottom: 3rem;
  }

  .admin-badge {
    display: inline-block;
    background: #3b82f6;
    color: white;
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 1px;
    margin-bottom: 0.5rem;
  }

  .sidebar-header h3 {
    color: #fff;
    margin: 0;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .nav-menu {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    flex: 1;
  }

  .nav-btn {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: transparent;
    border: none;
    color: #94a3b8;
    padding: 1rem;
    cursor: pointer;
    border-radius: 8px;
    transition: all 0.2s;
    font-size: 0.95rem;
    text-align: left;
    font-weight: 500;
  }

  .nav-btn:hover {
    background: rgba(255, 255, 255, 0.05);
    color: #fff;
  }

  .nav-btn.active {
    background: rgba(59, 130, 246, 0.1);
    color: #60a5fa;
    box-shadow: 0 0 0 1px rgba(59, 130, 246, 0.2);
  }

  .sidebar-footer {
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    padding-top: 1.5rem;
  }

  .back-link {
    color: #64748b;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .back-link:hover { color: #fff; }

  /* --- CONTENT AREA --- */
  .content-area {
    flex: 1;
    padding: 3rem 4.5rem;
    overflow-y: auto;
  }

  .panel {
    display: none;
    max-width: 800px;
    margin: 0 0 auto;
    animation: slideUp 0.4s ease-out;
  }

  .panel.active {
    display: block;
  }

  @keyframes slideUp {
    from { opacity: 0; transform: translateY(15px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .panel-header {
    margin-bottom: 2rem;
  }

  .panel-header h2 {
    font-size: 2rem;
    color: #fff;
    font-weight: 700;
    margin-bottom: 0.5rem;
    letter-spacing: -0.5px;
  }

  .panel-header p {
    color: #94a3b8;
    font-size: 1.3rem;
  }

  /* --- THE BOX (Form Container) --- */
  .box {
    position: relative;
    background: rgba(30, 41, 59, 0.4); /* Dark translucent base */
    padding: 2.5rem;
    width:100%;
    border-radius: 24px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    box-shadow: 
      0 25px 50px -12px rgba(0, 0, 0, 0.5), /* Deep shadow */
      0 0 0 1px rgba(255, 255, 255, 0.05) inset; /* Inner light rim */
    backdrop-filter: blur(20px); /* Heavy blur for frosted glass look */
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .box:hover {
    box-shadow: 
      0 30px 60px -12px rgba(0, 0, 0, 0.6),
      0 0 0 1px rgba(255, 255, 255, 0.1) inset;
  }

  /* --- FORM ELEMENTS --- */
  .form-group {
    margin-bottom: 1.7rem;
    margin-right: 1.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3.5rem;
  }

  h4 {
    display: block;
    color: #e2e8f0;
    margin-bottom: 0.75rem;
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.3px;
  }

  .options{
    width: 100%;
    margin-right 1.5rem;
  }
  input, select, textarea {
    width: 100%;
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 1rem 1rem;
    border-radius: 12px;
    color: #f1f5f9;
    font-size: 1rem;
    outline: none;
    transition: all 0.2s;
  }

  input:focus, select:focus, textarea:focus {
    border-color: #60a5fa;
    background: rgba(15, 23, 42, 0.8);
    box-shadow: 0 0 0 3px rgba(96, 165, 250, 0.15);
  }

  input::placeholder, textarea::placeholder {
    color: #64748b;
  }

  /* Date/Time specific */
  input[type="date"], input[type="time"] {
    color-scheme: dark;
  }

  /* Button */
  .save-btn {
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    font-size: 1rem;
    margin-top: 1.5rem;
    width: 100%;
    transition: all 0.2s;
    box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.3);
  }

  .save-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.4);
    filter: brightness(1.1);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .content-area { padding: 2rem; }
  }

  @media (max-width: 768px) {
    .dashboard-container { flex-direction: column; }
    .sidebar { width: 100%; height: auto; position: relative; border-right: none; border-bottom: 1px solid rgba(255,255,255,0.1); }
    .content-area { padding: 1.5rem; }
    .form-row { grid-template-columns: 1fr; gap: 1.5rem; }
    .beautiful-box { padding: 1.5rem; }
  }
</style>