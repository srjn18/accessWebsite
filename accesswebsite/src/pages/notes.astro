---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Carousel from "../components/eventsCarousel.astro";
import rightArrow from '@assets/icons/arrow-right.svg';



// --- CONFIGURATION ZONE ---
// Paste your drive links here. The page will auto-update.
const yearData = [
  { 
    year: "2nd Year", 
    semester: "Sem 3 & 4",
    noteLink1: "https://drive.google.com/drive/folders/1-6Bc155AMdje4_SxJTxinwSmEC9aXthG", // drive link of 3rd sem
    noteLink2: "https://drive.google.com/drive/folders/1zgQF-rNONEzJhxmK0stbc0pv_39QG4k1", // drive link of 4th sem
    syllabusLink: "/images/homePages/Syllabus28.pdf", // Replace with actual PDF Link
    timetableLink: "#", // Replace with actual PDF Link
    color: "cyan" // visual theme for this card
  },
  { 
    year: "3rd Year", 
    semester: "Sem 5 & 6",
    noteLink1: "https://drive.google.com/drive/folders/18IvkHqbxYbWV0aR0642AmRvfwEddQtXi", // drive link of 5th sem
    noteLink2: "https://drive.google.com/drive/folders/1-lLrYBmXCURsu2wsxKcZbINuk0EDGoWR", // drive link of 6th sem 
    syllabusLink: "/images/homePages/Syllabus27.pdf", 
    timetableLink: "#", // update it when next sem starts 
    color: "purple"
  },
  { 
    year: "4th Year", 
    semester: "Sem 7 & 8",
    noteLink1: "https://drive.google.com/drive/folders/1zAHRHWkGU77he0iSxl9knxTy9-jbiEps", // drive link of 7th sem
    noteLink2: "https://drive.google.com/drive/folders/1zAHRHWkGU77he0iSxl9knxTy9-jbiEps", // drive link of 7th sem 
    syllabusLink: "/images/homePages/Syllabus26.pdf", 
    timetableLink: "#",
    color: "emerald"
  },
];
---

<Navbar />

  <!--corosel effect of events section -->
  <div class="eventsSec">
    <div class="eventsHeader">
      <div class="headingWrap">
        <h2>Events</h2>
        <p>Explore the latest happenings and memorable moments from our department's events and activities.</p>
      </div>

      <a href="/events" class="eventsArrow" aria-label="View all events">
        <img src={rightArrow.src} alt="View all events" />
      </a>
    </div>
    <div class="eventsCarousel">
      <Carousel />
    </div>
  </div>
  
  <!-- BACKGROUND: Distinct from Home (Grid + Deep Space) -->
  <div class="space-background">
    <canvas id="starCanvas"></canvas>
    <div class="image1"><img src="/images/homePages/spaceship.png" alt="spaceship" /></div>
    <div class="image2"><img src="/images/homePages/alien.png" alt="alien" /></div>
  </div>

  <div class="archive-container">
    
    <!-- HEADER: Technical Dashboard Style -->
    <header class="archive-header">
      <div class="header-line"></div>
      <div class="header-content">
        <h1 class="glitch-text" data-text="ACADEMIC ARCHIVE">ACADEMIC ARCHIVE</h1>
        <p class="status-text">SYSTEM STATUS: <span class="blink">ONLINE</span> // ACCESSING STUDENT RESOURCES</p>
      </div>
    </header>

    <!-- SECTION 1: NOTES section -->
    <!-- Large distinct columns -->
    <section class="repository-section">
      <h2 class="section-label">01 NOTES MATERIALS</h2>
      
      <div class="monolith-grid">
        {yearData.map((data) => (
          <div class={`monolith-card theme-${data.color}`}>
            <div class="monolith-header">
              <span class="year-badge">{data.year}</span>
              <span class="sem-badge">{data.semester}</span>
            </div>
            <div class="monolith-body">
              <div class="icon-frame">
                <!-- Folder Icon -->
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 20a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.9a2 2 0 0 1-1.69-.9L9.6 3.9A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2Z"/></svg>
              </div>
              <h3>Class Notes</h3>
              <p>Access the drive repository for notes and study materials.</p>
            </div>
            <a href={data.noteLink1} target="_blank" rel="noopener noreferrer" class="access-btn">
              ACCESS ODD SEM <span class="arrow"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M10.46 18a2.2 2.2 0 0 1-.91-.2a1.76 1.76 0 0 1-1.05-1.59V7.79A1.76 1.76 0 0 1 9.55 6.2a2.1 2.1 0 0 1 2.21.26l5.1 4.21a1.7 1.7 0 0 1 0 2.66l-5.1 4.21a2.06 2.06 0 0 1-1.3.46"/></svg></span>
            </a><br />
            <a href={data.noteLink2} target="_blank" rel="noopener noreferrer" class="access-btn">
              ACCESS EVEN SEM <span class="arrow"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M10.46 18a2.2 2.2 0 0 1-.91-.2a1.76 1.76 0 0 1-1.05-1.59V7.79A1.76 1.76 0 0 1 9.55 6.2a2.1 2.1 0 0 1 2.21.26l5.1 4.21a1.7 1.7 0 0 1 0 2.66l-5.1 4.21a2.06 2.06 0 0 1-1.3.46"/></svg></span>
            </a><br />
          </div>
        ))}
      </div>
    </section>

    <!-- SECTION 2:(Syllabus & Time Table) -->
    <!-- Split layout to look like a data table -->
    <section class="protocol-section">
      <h2 class="section-label">02 CURRICULUM & SCHEDULES</h2>
      
      <div class="control-panel">
        
        <!-- Tab Header -->
        <div class="panel-header">
          <div class="panel-title">QUICK DOWNLOADS</div>
          <div class="panel-decoration">/// SECURE CONNECTION</div>
        </div>

        <!-- The List -->
        <div class="panel-list">
          {yearData.map((data, index) => (
            <div class="panel-row">
              <div class="row-id">0{index + 1}</div>
              <div class="row-info">
                <strong>{data.year}</strong>
              </div>
              
              <div class="row-actions">
                <a href={data.syllabusLink} class="action-link syllabus" download>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>
                  Syllabus
                </a>
                <a href={data.timetableLink} class="action-link timetable" target="_blank" rel="noopener noreferrer">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
                  Time Table
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

  </div>

<script src="/stars.js" is:inline defer></script>
<Footer />

<style>
  /* --- TECH / ARCHIVE THEME --- */

  /* ---------- Events carousel styles ---------- */
.eventsSec {
  padding: 32px 48px 24px;   /* reduced top & bottom */
  margin-top: 60px;
}

/* ---------- HEADER ROW ---------- */

.eventsHeader {
  display: grid;
  grid-template-columns: 1fr auto;
  align-items: start;
  gap: 16px;
  margin-bottom: 2px;
}

/* ---------- TEXT ---------- */

.headingWrap h2 {
  margin: 0;
  font-size: 3.3rem;
  font-weight: 600;
  color: #fff;
  margin-left: 40px;

  /* subtle galaxy glow */
  text-shadow:
    0 0 12px rgba(120, 90, 255, 0.45),
    0 0 30px rgba(80, 120, 255, 0.25);
}

.headingWrap p {
  color: rgba(255, 255, 255, 0.75);
  font-size: 1.5rem;
  line-height: 2rem;
  margin: 20px 0 0 40px;
}

/* ---------- ARROW ---------- */

.eventsArrow {
  width: 65px;
  height: 65px;
  border-radius: 33px;
  display: grid;
  place-items: center;
  margin-right: 40px;
  margin-bottom: 60px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.eventsArrow img {
  width: 55px;
  height: 55px;
  filter: brightness(1.2);
}

/* Hover micro-interaction */
.eventsArrow:hover {
  transform: translateX(4px) scale(1.05);
  box-shadow:
    0 10px 30px rgba(120, 90, 255, 0.6),
    inset 0 0 0 1px rgba(255, 255, 255, 0.4);
}

/* event carousel*/
.eventsCarousel {
  margin-top: 8px;           /* instead of huge default gap */
}


  /* 1. Background Mechanics */
  .space-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background: #030712; /* Deep space black */
    overflow: hidden;
  }
  
  /* Distributed decorative images across the page */
  .space-background .image1,
  .space-background .image2 {
    position: absolute;
    z-index: 999;
    opacity: 0.9;
    transition: transform 0.6s ease, opacity 0.3s ease;
  }

  .space-background .image1 { top: 10%; left: 4%; transform: translate(0, 0); }
  .space-background .image2 { top: 70%; left: 82%; transform: translate(-50%, -50%); }
  

  .space-background .image1 img,
  .space-background .image2 img{
    display: block;
    opacity: 0.9;
    image-rendering: optimizeQuality;
  }

  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .space-background .image1 { top: 10%; left: 4%; }
    .space-background .image2 { top: 50%; left: 82%; }
    
  }

  @media (max-width: 640px) {
    .space-background .image1,
    .space-background .image2{ opacity: 0.9; }
    .space-background .image1 { top: 10%; left: 4%; transform: translate(-50%, 0); }
    .space-background .image2 { top: 50%; left: 82%; transform: translate(-50%, -40%); }
    
  }

  #starCanvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.5;
  }

  /* 2. Layout Container */
  .archive-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 8rem 1.5rem 4rem;
    position: relative;
    z-index: 1;
  }

  /* 3. Header: Technical */
  .archive-header {
    border-left: 4px solid #6366f1;
    padding-left: 1.5rem;
    margin-bottom: 5rem;
  }

  .glitch-text {
    font-size: 3.5rem;
    font-weight: 900;
    color: #fff;
    letter-spacing: -1px;
    text-transform: uppercase;
    margin: 0;
    font-family: 'Courier New', Courier, monospace; /* Tech feel */
    text-shadow: 2px 2px 0px rgba(99, 102, 241, 0.5);
  }

  .status-text {
    font-family: monospace;
    color: #94a3b8;
    margin-top: 0.5rem;
    font-size: 1rem;
  }

  .blink {
    color: #4ade80;
    animation: blinker 1.5s linear infinite;
  }
  @keyframes blinker { 50% { opacity: 0; } }

  .section-label {
    font-family: monospace;
    color: #64748b;
    font-size: 1.9rem;
    letter-spacing: 2px;
    margin-bottom: 1.5rem;
    border-bottom: 1px solid #1e293b;
    padding-bottom: 0.5rem;
    display: inline-block;
  }

  /* 4. Notes - Monolith Cards */
  .repository-section {
    margin-bottom: 6rem;
  }

  .monolith-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .monolith-card {
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(255,255,255,0.05);
    backdrop-filter: blur(12px);
    padding: 2rem;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 400px;
  }

  /* Theme Colors */
  .theme-cyan { border-top: 3px solid #22d3ee; }
  .theme-purple { border-top: 3px solid #c084fc; }
  .theme-emerald { border-top: 3px solid #34d399; }

  .monolith-card:hover {
    transform: translateY(-5px);
    background: rgba(15, 23, 42, 0.8);
    box-shadow: 0 20px 40px -15px rgba(0,0,0,0.5);
  }

  /* Glow hover effect based on theme */
  .theme-cyan:hover { box-shadow: 0 0 20px rgba(34, 211, 238, 0.15); border-color: #22d3ee; }
  .theme-purple:hover { box-shadow: 0 0 20px rgba(192, 132, 252, 0.15); border-color: #c084fc; }
  .theme-emerald:hover { box-shadow: 0 0 20px rgba(52, 211, 153, 0.15); border-color: #34d399; }

  .monolith-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .year-badge {
    font-size: 1.8rem;
    font-weight: 700;
    color: #fff;
  }

  .sem-badge {
    font-family: monospace;
    font-size: 1rem;
    background: rgba(255,255,255,0.1);
    padding: 2px 8px;
    border-radius: 4px;
    color: #cbd5e1;
  }

  .icon-frame {
    margin-bottom: 1rem;
    color: rgba(255,255,255,0.7);
  }

  .monolith-body h3 {
    color: #fff;
    font-size: 1.4rem;
    margin-bottom: 0.5rem;
  }
  .monolith-body p {
    color: #94a3b8;
    font-size: 1.2rem;
  }

  .access-btn {
    margin-top: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: rgba(255,255,255,0.05);
    padding: 1rem;
    color: #fff;
    text-decoration: none;
    font-family: monospace;
    font-size: 1.2rem;
    transition: background 0.2s;
    border: 1px solid transparent;
  }

  .theme-cyan .access-btn:hover { background: rgba(34, 211, 238, 0.1); border-color: #22d3ee; }
  .theme-purple .access-btn:hover { background: rgba(192, 132, 252, 0.1); border-color: #c084fc; }
  .theme-emerald .access-btn:hover { background: rgba(52, 211, 153, 0.1); border-color: #34d399; }

  /* 5. Protocol Section (List View) */
  .control-panel {
    background: rgba(15, 23, 42, 0.8);
    border: 1px solid #1e293b;
    border-radius: 4px;
    backdrop-filter: blur(10px);
  }

  .panel-header {
    background: #0f172a;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid #1e293b;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .panel-title {
    color: #fff;
    font-weight: 700;
    letter-spacing: 1px;
  }

  .panel-decoration {
    font-family: monospace;
    color: #475569;
    font-size: 1rem;
  }

  .panel-list {
    display: flex;
    flex-direction: column;
  }

  .panel-row {
    display: flex;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid rgba(255,255,255,0.03);
    transition: background 0.2s;
  }

  .panel-row:last-child {
    border-bottom: none;
  }

  .panel-row:hover {
    background: rgba(255,255,255,0.02);
  }

  .row-id {
    font-family: monospace;
    color: #475569;
    margin-right: 2rem;
    font-size: 1.5rem;
  }

  .row-info {
    flex-grow: 1;
  }

  .row-info strong {
    display: block;
    color: #e2e8f0;
    font-size: 1.3rem;
  }

  .row-actions {
    display: flex;
    gap: 1rem;
  }

  .action-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    font-size: 1.2rem;
    font-weight: 500;
    transition: all 0.2s;
  }

  .action-link.syllabus {
    background: rgba(255,255,255,0.05);
    color: #cbd5e1;
  }
  .action-link.syllabus:hover {
    background: #fff;
    color: #000;
  }

  .action-link.timetable {
    border: 1px solid #475569;
    color: #94a3b8;
  }
  .action-link.timetable:hover {
    border-color: #6366f1;
    color: #6366f1;
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .glitch-text { font-size: 2rem; }
    
    .panel-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
    
    .row-id { display: none; }
    
    .row-actions {
      width: 100%;
      flex-direction: column;
    }
    
    .action-link {
      justify-content: center;
      width: 100%;
    }
  }
</style>