  <script>
    // Generate orange stars dynamically
    function generateStars() {
      const starColor = '#c49952';
      const maxX = Math.max(window.innerWidth, 2000);
      const maxY = Math.max(window.innerHeight, 2000);
      
      function createStarShadows(count, width, height) {
        let shadows = [];
        for (let i = 0; i < count; i++) {
          const x = Math.random() * width;
          const y = Math.random() * height;
          shadows.push(`${Math.round(x)}px ${Math.round(y)}px ${starColor}`);
        }
        return shadows.join(', ');
      }
      
      const stars1 = document.getElementById('stars');
      const stars2 = document.getElementById('stars2');
      const stars3 = document.getElementById('stars3');
      const stars4 = document.getElementById('stars4');
      
      // Remove existing after elements
      document.querySelectorAll('.star-after').forEach(el => el.remove());
      
      if (stars1) {
        const shadow = createStarShadows(200, maxX, maxY);
        stars1.style.boxShadow = shadow;
        const after1 = stars1.cloneNode(true);
        after1.className = 'star-after';
        after1.style.top = '2000px';
        after1.style.animationDuration = '50s';
        after1.style.boxShadow = shadow;
        stars1.parentNode.appendChild(after1);
      }
      
      if (stars2) {
        const shadow = createStarShadows(100, maxX, maxY);
        stars2.style.boxShadow = shadow;
        const after2 = stars2.cloneNode(true);
        after2.className = 'star-after';
        after2.style.top = '2000px';
        after2.style.animationDuration = '100s';
        after2.style.boxShadow = shadow;
        stars2.parentNode.appendChild(after2);
      }
      
      if (stars3) {
        const shadow = createStarShadows(50, maxX, maxY);
        stars3.style.boxShadow = shadow;
        const after3 = stars3.cloneNode(true);
        after3.className = 'star-after';
        after3.style.top = '2000px';
        after3.style.animationDuration = '150s';
        after3.style.boxShadow = shadow;
        stars3.parentNode.appendChild(after3);
      }
      
      if (stars4) {
        const shadow = createStarShadows(300, maxX, maxY);
        stars4.style.boxShadow = shadow;
        const after4 = stars4.cloneNode(true);
        after4.className = 'star-after';
        after4.style.top = '2000px';
        after4.style.animationDuration = '600s';
        after4.style.boxShadow = shadow;
        stars4.parentNode.appendChild(after4);
      }
    }
    
    // Generate stars on load and resize
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', generateStars);
    } else {
      generateStars();
    }
    window.addEventListener('resize', generateStars);

    // Year tab switching + card glow behaviour
    document.addEventListener('DOMContentLoaded', function() {
      const tabs = document.querySelectorAll('.year-tab');
      const contents = document.querySelectorAll('.year-content');

      // Year tab switching
      tabs.forEach(tab => {
        tab.addEventListener('click', function() {
          const selectedYear = this.getAttribute('data-year');

          // Update tab styles
          tabs.forEach(t => {
            t.classList.remove('active');
            t.style.background = 'rgba(255,255,255,0.05)';
            t.style.borderColor = 'rgba(255,255,255,0.2)';
            t.style.color = 'rgba(255,255,255,0.7)';
          });

          this.classList.add('active');
          this.style.background = 'rgba(196, 153, 82, 0.2)';
          this.style.borderColor = 'rgba(196, 153, 82, 0.5)';
          this.style.color = 'rgba(255,255,255,0.9)';

          // Show/hide content
          contents.forEach(content => {
            if (content.id === `year-${selectedYear}`) {
              content.style.display = 'block';
            } else {
              content.style.display = 'none';
            }
          });
        });
      });

      // Card glow that follows cursor inside each event card
      const cardInners = document.querySelectorAll<HTMLElement>('.event-card-inner');
      cardInners.forEach(inner => {
        // Create glow overlay
        const glow = document.createElement('div');
        glow.className = 'event-card-glow';
        inner.appendChild(glow);

        // Ensure base border/shadow
        (inner as HTMLElement).style.borderColor = 'rgba(255,255,255,0.1)';
        (inner as HTMLElement).style.boxShadow = 'none';

        // Bobbing animation while hovered
        inner.addEventListener('mouseenter', () => {
          inner.classList.add('hover-bob');
        });
        inner.addEventListener('mouseleave', () => {
          inner.classList.remove('hover-bob');
        });

        inner.addEventListener('mousemove', (e) => {
          const rect = inner.getBoundingClientRect();
          const x = e.clientX - rect.left;
          const y = e.clientY - rect.top;
          const cx = rect.width / 2;
          const cy = rect.height / 2;

          const dx = (x - cx) / rect.width;
          const dy = (y - cy) / rect.height;
          const dist = Math.sqrt(dx * dx + dy * dy); // 0 at center

          let intensity = 1 - dist * 1.5;
          // Extra boost when cursor is near the top of the card
          const topBoost = Math.max(0, (cy - y) / cy); // 1 at very top, 0 at center/bottom
          intensity += 0.4 * topBoost;
          if (intensity < 0) intensity = 0;
          if (intensity > 1) intensity = 1;

          const px = (x / rect.width) * 100;
          const py = (y / rect.height) * 100;

          glow.style.opacity = intensity.toString();
          const innerRadius = 20 + 10 * topBoost;
          const midRadius = 40 + 10 * topBoost;
          glow.style.background = `radial-gradient(circle at ${px}% ${py}%, rgba(196,153,82,${0.6 + 0.2 * topBoost}) 0%, rgba(196,153,82,0.25) ${innerRadius}%, transparent ${midRadius}%)`;

          (inner as HTMLElement).style.borderColor = `rgba(196,153,82,${0.25 + 0.45 * intensity})`;
          (inner as HTMLElement).style.boxShadow = `0 ${-1 - 3 * topBoost}px ${20 + 22 * intensity}px rgba(196,153,82,${0.2 + 0.35 * intensity})`;
        });

        inner.addEventListener('mouseleave', () => {
          glow.style.opacity = '0';
          (inner as HTMLElement).style.borderColor = 'rgba(255,255,255,0.1)';
          (inner as HTMLElement).style.boxShadow = 'none';
          inner.classList.remove('hover-bob');
        });
      });
    });
  </script>

