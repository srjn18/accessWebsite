---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Navbar />
<Layout>

<header class="faculty-header">
  <h1>MEET OUR TEACHING STAFF</h1>
</header>

<main class="faculty-container">

  <!-- FACULTY CARD -->
  <div class="faculty-card">
    <div class="photo-wrapper">
      <img src="/images/Faculty Image/hod.jpg" alt="Dr. Radhakrishna" class="faculty-photo" />
    </div>
    <h3 class="fade-text">DR. RADHAKRISHNA</h3>
    <p class="fade-text delay">Professor & Head</p>
    <button class="glow" onclick="toggleDetails()">READ MORE</button>
  </div>

  <!-- FACULTY DETAILS -->
  <section id="faculty-details" class="faculty-details hidden">
    <div class="faculty-details-wrapper">
      <div class="faculty-photo-wrapper-large">
        <img src="/images/Faculty Image/hod.jpg" alt="Dr. Radhakrishna" class="faculty-photo-large" />
      </div>

      <h2>DR. RADHAKRISHNA</h2>
      <p><strong>Designation:</strong> Professor & Head</p>
      <p><strong>Email:</strong> radhakrishna@nitte.edu.in</p>

      <div class="accordion">
        <details>
          <summary>Education Qualification</summary>
          <ul>
            <li>B.E - NMAMIT (2003)</li>
            <li>M.Tech - NMAMIT (2007)</li>
            <li>Ph.D</li>
            <li>Member - MISTE, MIAENG</li>
          </ul>
        </details>

        <details>
          <summary>Past Experience</summary>
          <ul>
            <li>Lecturer - SGS College, Bhatkal</li>
            <li>20+ years at NMAMIT</li>
          </ul>
        </details>

        <details>
          <summary>Areas of Interest</summary>
          <ul>
            <li>Cryptography & Network Security</li>
            <li>Cyber Security & Forensics</li>
            <li>AI & Machine Learning</li>
          </ul>
        </details>

        <details>
          <summary>Subjects Teaching</summary>
          <ul>
            <li>DBMS</li>
            <li>Computer Networks</li>
            <li>Blockchain</li>
            <li>Cyber Security</li>
          </ul>
        </details>
      </div>

      <button class="glow" onclick="toggleDetails()">CLOSE</button>
    </div>
  </section>

  <!-- SHOOTING STARS -->
  <div class="shooting-stars"></div>

</main>

<Footer />

<script is:inline>
function toggleDetails() {
  const details = document.getElementById("faculty-details");
  details.classList.toggle("hidden");
  details.scrollIntoView({ behavior: "smooth", block: "center" });
}

const observer = new IntersectionObserver(entries => {
  entries.forEach(entry => {
    if (entry.isIntersecting) entry.target.classList.add("in-view");
  });
},{ threshold: 0.25 });

document.querySelectorAll(
  ".faculty-card, .faculty-details-wrapper, details"
).forEach(el => observer.observe(el));
</script>

<style>
/* ================= GALAXY BACKGROUND ================= */
body {
  background:
    radial-gradient(circle at 50% 50%, rgba(139,92,246,.35), transparent 45%),
    radial-gradient(circle at 50% 50%, rgba(34,211,238,.3), transparent 65%),
    linear-gradient(180deg, #020008, #070014, #010005);
  background-attachment: fixed;
  overflow-x: hidden;
}

/* ================= STARFIELD ================= */
body::before {
  content: "";
  position: fixed;
  inset: 0;
  background-image:
    radial-gradient(1px 1px at 10% 20%, #fff, transparent),
    radial-gradient(1px 1px at 30% 60%, #fff, transparent),
    radial-gradient(1px 1px at 50% 10%, #fff, transparent),
    radial-gradient(1px 1px at 70% 50%, #fff, transparent),
    radial-gradient(1px 1px at 85% 30%, #fff, transparent),
    radial-gradient(1px 1px at 15% 80%, #fff, transparent),
    radial-gradient(1px 1px at 60% 75%, #fff, transparent),
    radial-gradient(1px 1px at 40% 40%, #fff, transparent);
  background-size: 120px 120px;
  animation: starsMove 120s linear infinite;
  pointer-events: none;
  z-index: -1;
}

/* Second layer for depth */
body::after {
  content: "";
  position: fixed;
  inset: 0;
  background-image:
    radial-gradient(0.8px 0.8px at 20% 30%, #fff, transparent),
    radial-gradient(0.8px 0.8px at 60% 20%, #fff, transparent),
    radial-gradient(0.8px 0.8px at 80% 80%, #fff, transparent),
    radial-gradient(0.8px 0.8px at 35% 50%, #fff, transparent),
    radial-gradient(0.8px 0.8px at 50% 70%, #fff, transparent),
    radial-gradient(0.8px 0.8px at 70% 10%, #fff, transparent),
    radial-gradient(0.8px 0.8px at 15% 40%, #fff, transparent),
    radial-gradient(0.8px 0.8px at 90% 60%, #fff, transparent);
  background-size: 180px 180px;
  animation: starsMove 160s linear infinite;
  pointer-events: none;
  z-index: -1;
}

@keyframes starsMove {
  to { transform: translateY(-1200px); }
}

/* ================= HEADER ================= */
.faculty-header {
  margin-top: 80px;
  text-align: center;
  color: #c4b5fd;
  text-shadow: 0 0 25px rgba(139,92,246,.9);
}

/* ================= CONTAINER ================= */
.faculty-container {
  display: flex;
  flex-direction: column;
  align-items: center; /* card centered */
  gap: 70px;
  margin: 90px 50px;
}

/* ================= FACULTY CARD ================= */
.faculty-card {
  width: 300px;
  padding: 25px;
  background: rgba(20,20,45,.65);
  backdrop-filter: blur(12px);
  border-radius: 25px;
  text-align: center; /* content centered */
  box-shadow: 0 0 20px rgba(139,92,246,.6);
  transform-style: preserve-3d;
  opacity: 0;
  transform: translateY(80px) rotateX(20deg) scale(.9);
}

.faculty-card.in-view {
  opacity: 1;
  transform: translateY(0) rotateX(0) scale(1);
  transition: 1s cubic-bezier(.2,.8,.2,1);
}

/* ================= FACULTY CARD PHOTO ================= */
.photo-wrapper {
  width: 140px;
  height: 140px;
  margin: 0 auto 15px auto; /* center the photo inside card */
  border-radius: 50%;
  overflow: hidden;
}

.faculty-photo {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* ================= DETAILS SECTION ================= */
.faculty-details {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.faculty-details-wrapper {
  width: 100%;
  max-width: 820px;
  margin: auto;
  padding: 45px 35px;
  background: rgba(15,18,45,.92);
  border-radius: 30px;
  text-align: center; /* content centered */
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 0 80px rgba(139,92,246,.45);
  opacity: 0;
  transform: perspective(900px) rotateY(18deg) scale(.9);
}

.faculty-details-wrapper.in-view {
  opacity: 1;
  transform: perspective(900px) rotateY(0) scale(1);
  transition: 1.1s cubic-bezier(.22,.61,.36,1);
}

.hidden { display: none; }

/* ================= CENTERED IMAGE ================= */
.faculty-photo-wrapper-large {
  width: 220px;
  height: 220px;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto 25px auto;
}

.faculty-photo-large {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 50%;
}

/* ================= ACCORDION ================= */
details {
  background: rgba(30,30,65,.75);
  margin: 12px 0;
  padding: 12px;
  border-radius: 14px;
  opacity: 0;
  transform: translateX(-30px) rotateY(-10deg);
}

details.in-view {
  opacity: 1;
  transform: translateX(0) rotateY(0);
  transition: .8s cubic-bezier(.2,.8,.2,1);
}

/* ================= LEFT-ALIGNED ACCORDION CONTENT ================= */
details summary {
  text-align: left; /* only accordion title left-aligned */
  cursor: pointer;
}

details ul {
  text-align: left; /* list left-aligned */
  padding-left: 20px;
  margin: 8px 0;
}

details summary::marker,
details summary::-webkit-details-marker {
  display: none;
}

details summary::after {
  content: "â–¸";
  float: right;
  transform: rotate(0deg);
  transition: transform 0.3s ease;
}

details[open] summary::after {
  transform: rotate(90deg);
}

/* ================= BUTTON ================= */
.glow {
  margin-top: 20px;
  padding: 10px 25px;
  border-radius: 30px;
  border: none;
  background: linear-gradient(45deg,#8b5cf6,#22d3ee);
  color: #fff;
  box-shadow: 0 0 30px rgba(139,92,246,.8);
  cursor: pointer;
  transition: .3s;
}
.glow:hover { transform: scale(1.1); }

/* ================= SHOOTING STARS ================= */
.shooting-stars::before,
.shooting-stars::after {
  content: "";
  position: fixed;
  width: 160px;
  height: 2px;
  background: linear-gradient(90deg, white, transparent);
  animation: shoot 6s linear infinite;
}

.shooting-stars::after { animation-delay: 3s; }

@keyframes shoot {
  from { transform: translate(-500px,-500px) rotate(45deg); opacity: 0; }
  to { transform: translate(1000px,1000px) rotate(45deg); opacity: 0; }
}

/* ================= RESPONSIVE ================= */
@media (max-width: 600px) {
  .faculty-photo-wrapper-large {
    width: 170px;
    height: 170px;
  }

  .faculty-details-wrapper {
    padding: 30px 20px;
  }

  .faculty-card {
    width: 90%;
  }
}
</style>
