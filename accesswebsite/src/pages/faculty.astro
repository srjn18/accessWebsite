---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Navbar />
<Layout>

<header class="faculty-header">
  <h1>MEET OUR TEACHING STAFF</h1>
</header>

<main class="faculty-container">

  <!-- Faculty Card -->
  <div class="faculty-card">
    <div class="photo-wrapper">
      <img src="/images/Faculty Image/hod.jpg" alt="Dr. Radhakrishna" class="faculty-photo" />
    </div>
    <h3 class="fade-text">DR. RADHAKRISHNA</h3>
    <p class="fade-text delay">Professor & Head</p>
    <button class="read-more glow" onclick="toggleDetails()">READ MORE</button>
  </div>

  <!-- Faculty Details Section -->
  <section id="faculty-details" class="faculty-details hidden">
    <div class="faculty-details-wrapper">
      <div class="faculty-photo-wrapper-large">
        <img src="/images/Faculty Image/hod.jpg" alt="Dr. Radhakrishna" class="faculty-photo-large" />
      </div>
      <h2>DR. RADHAKRISHNA</h2>
      <p><b>Designation:</b> Professor & Head</p>
      <p><b>Email:</b> radhakrishna@nitte.edu.in</p>

      <div class="accordion">
        <details>
          <summary>Education Qualification</summary>
          <ul>
            <li>B.E - NMAMIT (2003)</li>
            <li>M.Tech - NMAMIT (2007)</li>
            <li>Ph.D</li>
            <li>Member - MISTE, MIAENG</li>
          </ul>
        </details>

        <details>
          <summary>Past Experience</summary>
          <ul>
            <li>Lecturer - SGS College, Bhatkal</li>
            <li>20+ years at NMAMIT, Nitte</li>
          </ul>
        </details>

        <details>
          <summary>Areas of Interest</summary>
          <ul>
            <li>Cryptography & Network Security</li>
            <li>Cyber Security & Forensics</li>
            <li>AI & Machine Learning</li>
          </ul>
        </details>

        <details>
          <summary>Subjects Teaching</summary>
          <ul>
            <li>DBMS</li>
            <li>Computer Networks</li>
            <li>Blockchain</li>
            <li>Cyber Security</li>
          </ul>
        </details>
      </div>

      <button class="close-details glow" onclick="toggleDetails()">CLOSE</button>
    </div>
  </section>

</main>

<Footer />

<script is:inline>
function toggleDetails() {
  const details = document.getElementById('faculty-details');
  details.classList.toggle('hidden');
  details.scrollIntoView({ behavior: 'smooth' });
}
</script>

<style>
/* Header */
.faculty-header {
  text-align: center;
  margin-top: 80px;
  color: #ff9c59;
  text-shadow: 0 0 20px rgba(255,156,89,0.5);
  font-family: 'Poppins', sans-serif;
}

/* Container */
.faculty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40px;
  margin: 60px 0;
}

/* Card */
.faculty-card {
  width: 300px;
  backdrop-filter: blur(8px);
  background: rgba(15,15,15,0.7);
  border-radius: 25px;
  text-align: center;
  padding: 25px;
  color: #eee;
  box-shadow: 0 10px 25px rgba(255,94,0,0.3);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.faculty-card:hover {
  transform: translateY(-10px) scale(1.05);
  box-shadow: 0 25px 60px rgba(255,94,0,0.5);
}

/* Photo */
.photo-wrapper {
  position: relative;
  overflow: hidden;
  border-radius: 50%;
  width: 140px;
  height: 140px;
  margin: 0 auto 15px;
}

.faculty-photo {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.4s ease, box-shadow 0.4s ease;
}

.faculty-card:hover .faculty-photo {
  transform: scale(1.15) rotate(3deg);
  box-shadow: 0 0 20px rgba(255,94,0,0.4);
}

/* Text Fade */
.fade-text {
  opacity: 0;
  animation: fadeInUp 0.8s forwards;
}
.fade-text.delay { animation-delay: 0.2s; }

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(15px); }
  to { opacity: 1; transform: translateY(0); }
}

/* Read More Button */
.read-more.glow, .close-details.glow {
  margin-top: 15px;
  padding: 10px 25px;
  border-radius: 30px;
  border: none;
  color: #fff;
  background: linear-gradient(45deg, #ff5e00, #ff8c42);
  box-shadow: 0 0 15px rgba(255,94,0,0.5), 0 0 30px rgba(255,140,66,0.3);
  cursor: pointer;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.read-more.glow:hover, .close-details.glow:hover {
  transform: scale(1.1);
  box-shadow: 0 0 25px rgba(255,94,0,0.7), 0 0 50px rgba(255,140,66,0.4);
}

/* Faculty Details Section */
.faculty-details {
  width: 100%;
  max-width: 900px;
  background: rgba(20,20,20,0.95);
  padding: 40px 25px;
  border-radius: 20px;
  color: #eee;
  text-align: center;
  box-shadow: 0 0 30px rgba(255,94,0,0.4);
  transition: all 0.4s ease;
}

.faculty-details.hidden {
  display: none;
}

.faculty-photo-wrapper-large {
  width: 220px;
  height: 220px;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto 20px;
}
.faculty-photo-large {
  width: 100%;
  height: 100%;
  object-fit: cover;
  box-shadow: 0 10px 30px rgba(255,94,0,0.4);
  transition: transform 0.3s ease;
}
.faculty-photo-large:hover { transform: scale(1.05) rotate(2deg); }

/* Accordion */
details {
  background: rgba(30,30,30,0.8);
  margin: 12px 0;
  padding: 12px;
  border-radius: 12px;
  overflow: hidden;
  transition: background 0.3s ease;
}
details[open] { background: rgba(40,40,40,0.95); box-shadow: 0 0 10px rgba(255,94,0,0.3); }
details summary { cursor: pointer; font-weight: bold; color: #ffb677; }
details ul { max-height: 0; overflow: hidden; transition: max-height 0.3s ease; margin-top: 8px; padding-left: 20px; color: #eee; }
details[open] ul { max-height: 500px; }
</style>
